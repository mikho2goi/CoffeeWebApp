        border: 5px solid #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .user-details {
        padding: 20px;
    }

    h1 {
        margin-top: 0;
        font-size: 28px;
        color: #000000;
    }

    p {
        font-size: 20px;
        color: #555;
        margin-bottom: 10px;
    }
</style>


<body>

    <div class="user-profile ">
        <h1>Thông Tin Tài Khoản</h1>
        <div class="avatar">
