@using CoffeeWebApp.ViewModels
@model RegisterViewModel

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Registration Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .registration-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 400px;
            text-align: center;
        }

            .registration-container h2 {
                color: #28a745; /* Green color for headings */
            }

        .registration-form {
            display: flex;
            flex-direction: column;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-size: 14px;
                color: #555;
                margin-bottom: 5px;
            }

            .form-group input {
                width: 100%;
                padding: 8px;
                font-size: 16px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .form-group button {
                background-color: #28a745;
                color: #fff;
                padding: 10px;
                font-size: 16px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                margin-top: 10px;
            }

                .form-group button:hover {
                    background-color: #218838;
                }

        /* Thêm style cho thông báo thành công */
        .success-message {
            color: #28a745;
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div class="registration-container">
        <h2>Đăng ký</h2>

        <form asp-action="Register" >
            <div class="form-group">
                <label for="email">Email:</label>
                <input asp-for="EmailAddress" type="email" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="password">Mật khẩu:</label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="confirm-password">Xác nhận mật khẩu:</label>
                <input asp-for="ConfirmPassword" type="password"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit">Đăng ký</button>
            </div>
        </form>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>@TempData["Error"] </b></span>
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="col-md-12 alert alert-success">
                <span><b>@TempData["Success"]</b></span>
            </div>
            <script>
                setTimeout(function () {
                    window.location.href = '@Url.Action("Login", "Account")'; // Chuyển hướng sau 2 giây
                }, 1600); // Thời gian đợi là 2000ms (tức là 2 giây)
            </script>
        }
    </div>
 
</body>
</html>
